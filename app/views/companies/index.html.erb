<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
   <div class="row mt-5">
      <div class="col-md-12">
        <% @companies.each do |company| %>
          <div class="row border rounded py-3 mt-2">
            <div class="col-md-8">
              <a href="<%= company_path(company) %>">
                 <%= company.name %>
              </a>
             </div>
            <div class="col-md-4 text-right">
              <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure to delete company !!'} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
